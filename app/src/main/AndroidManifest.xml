<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.learningApp.myapplication">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyLearningProgress"
        tools:targetApi="31">
        <activity
            android:name=".presentation.ShowItemActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/Technology"/>
        <activity
            android:name=".presentation.AddItemActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/New_technology"/>
        <activity
            android:name=".presentation.MainActivity"
            android:exported="true"
            android:label="@string/main_activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>